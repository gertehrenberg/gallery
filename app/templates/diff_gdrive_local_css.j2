        align-items: center;
        gap: 4px;
        padding: 6px 10px;
        background: #222;
        border: 1px solid #555;
        border-radius: 6px;
        color: #eee;
        font-size: 14px;
        cursor: pointer;
        transition: background 0.2s, border-color 0.2s;
        white-space: nowrap;
    }

    .cat-pill:hover {
        background: #333;
        border-color: #999;
    }

    .cat-pill input {
        transform: scale(1.1);
        cursor: pointer;
    }

    .cat-pill .icon {
        font-size: 16px;
    }

    .cat-pill .label {
        opacity: 0.9;
    }

</style>