        if (renames.length === 0 && deletes.length === 0 && syncs.length === 0 && unique_filename.length === 0) {
            alert("Keine Aktion ausgewÃ¤hlt.\nBitte mindestens eine Datei ankreuzen.");
            return;
        }

// ðŸ‘‰ Kategorie-Checkboxen hinzufÃ¼gen
