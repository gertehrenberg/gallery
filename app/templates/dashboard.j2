<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f3f4f6;
            color: #1f2937;
        }
        .dashboard-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }
        .card {
            background-color: #ffffff;
            border-radius: 0.75rem;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            padding: 1rem;
        }
        .icon-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.125rem;
        }
        .icon-link-sm {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            font-size: 0.875rem;
        }
        .icon {
            font-size: 1.25rem;
        }
        .icon-sm {
            font-size: 1rem;
        }
        .text-blue {
            color: #2563eb;
        }
        .text-blue:hover {
            text-decoration: underline;
        }
    </style>
<body class="bg-gray-100 text-gray-900">
<div class="p-6">
    <h1 class="dashboard-title">Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Übersicht -->
        <div class="card">
            <h2 class="text-lg font-semibold mb-2">Übersicht</h2>
            <p>Projektname: n8n-Test</p>
            <p>Projekt-ID: innate-setup-454010-i9</p>

            {% for row in info %}
                {% if row.from_to %}
                    <p>Abrechnung: {{ row.from_to }}</p>
                {% elif row.kosten_chf %}
                    <p>Betrag: {{ row.kosten_chf }} CHF</p>
                {% endif %}
            {% endfor %}
        </div>

        <!-- GDrive -->
        <div class="bg-white rounded-xl shadow p-4">
            <h2 class="text-lg font-semibold mb-2">GDrive vs. Lokal</h2>
            <table class="w-full text-sm text-left">
                <thead>
                <tr>
                    <th class="font-medium">Kategorie</th>
                    <th class="font-medium text-right">GDrive</th>
                    <th class="font-medium text-center">
                        <div class="flex justify-center gap-4">
                            <span class="text-xl">→</span>
                            <span class="text-xl">←</span>
                        </div>
                    </th>
                    <th class="font-medium text-left">Lokal</th>
                </tr>
                </thead>
                <tbody>
                {% for stat in gdrive_stats %}
                    <tr class="border-t">
                        <td>
                            <div class="icon-link-sm">
                                <span class="icon-sm">{{ stat.icon }}</span>
                                <a href="/gallery/?page=1&amp;count=6&amp;folder={{ stat.key }}&amp;textflag=1" class="text-blue">
                                    {{ stat.label }}
                                </a>
                            </div>
                        </td>
                        <td class="text-right">{{ stat.gdrive_count }}</td>
                        <td class="text-center">
                            <div class="flex justify-center gap-4">
                                <form action="/gallery/dashboard/test">
                                    <input type="hidden" name="folder" value="{{ stat.key }}">
                                    <input type="hidden" name="direction" value="gdrive_from_lokal">
                                    <button type="submit" class="text-xl">→</button>
                                </form>
                                <form action="/gallery/dashboard/test">
                                    <input type="hidden" name="folder" value="{{ stat.key }}">
                                    <input type="hidden" name="direction" value="gdrive_from_lokal">
                                    <button type="submit" class="text-xl">←</button>
                                </form>
                            </div>
                        </td>
                        <td class="text-left pl-2">{{ stat.local_count }}</td>
                        <td class="text-left pl-2">{{ stat.db_count }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Tools -->
        <div class="bg-white rounded-xl shadow p-4">
            <h2 class="text-lg font-semibold mb-2">Tools</h2>
            <ul class="space-y-2 text-lg">
                {% for tool in tool_links %}
                    <li class="icon-link">
                        <span class="icon">{{ tool.icon }}</span>
                        <a href="{{ tool.url }}" class="text-blue">
                            {{ tool.label }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Balkenanzeige -->
    <div class="mt-6 bg-white rounded-xl shadow p-4">
        <h2 class="text-lg font-semibold mb-4">Tagesgenaue Kosten im aktuellen Monat</h2>
        <canvas id="dailyCostsChart" height="100"></canvas>
        <script>
            const ctx = document.getElementById('dailyCostsChart').getContext('2d');
            const dailyChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ labels | tojson }},
                    datasets: [{
                        label: 'Kosten in CHF',
                        data: {{ values | tojson }},
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'CHF'
                            }
                        }
                    }
                }
            });
        </script>
    </div>
</div>
</body>
</html>
