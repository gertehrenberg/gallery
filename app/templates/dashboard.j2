<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100 text-gray-900">
<div class="p-6">
    <h1 class="text-2xl font-bold mb-4">Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Übersicht -->
        <div class="bg-white rounded-xl shadow p-4">
            <h2 class="text-lg font-semibold mb-2">Übersicht</h2>
            <p>Projektname: n8n-Test</p>
            <p>Projekt-ID: innate-setup-454010-i9</p>

            {% for row in info %}
                {% if row.from_to %}
                    <p>Abrechnung: {{ row.from_to }}</p>
                {% elif row.kosten_chf %}
                    <p>Betrag: {{ row.kosten_chf }} CHF</p>
                {% endif %}
            {% endfor %}
        </div>

        <!-- GDrive -->
        <div class="bg-white rounded-xl shadow p-4">
            <h2 class="text-lg font-semibold mb-2">GDrive</h2>
            <table class="w-full text-sm text-left">
                <thead>
                <tr>
                    <th class="font-medium">Kategorie</th>
                    <th class="font-medium text-right">GDrive</th>
                    <th class="font-medium text-right">Lokal</th>
                </tr>
                </thead>
                <tbody>
                {% for stat in gdrive_stats %}
                    <tr class="border-t">
                        <td>{{ stat.ordner|safe }}</td>
                        <td class="text-right">{{ stat.gdrive_count }}</td>
                        <td class="text-right">{{ stat.local_count }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Balkenanzeige -->
    <div class="mt-6 bg-white rounded-xl shadow p-4">
        <h2 class="text-lg font-semibold mb-4">Tagesgenaue Kosten im aktuellen Monat</h2>
        <canvas id="dailyCostsChart" height="100"></canvas>
        <script>
            const ctx = document.getElementById('dailyCostsChart').getContext('2d');
            const dailyChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ labels | tojson }},
                    datasets: [{
                        label: 'Kosten in CHF',
                        data: {{ values | tojson }},
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'CHF'
                            }
                        }
                    }
                }
            });
        </script>
    </div>
</div>
</body>
</html>
