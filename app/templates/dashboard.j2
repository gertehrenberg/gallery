<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f3f4f6;
            color: #1f2937;
        }

        .dashboard-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .card {
            background-color: #ffffff;
            border-radius: 0.75rem;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            padding: 1rem;
        }

        .icon-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.125rem;
        }

        .icon-link-sm {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            font-size: 0.875rem;
        }

        .icon {
            font-size: 1.25rem;
        }

        .icon-sm {
            font-size: 1rem;
        }

        .text-blue {
            color: #2563eb;
        }

        .text-blue:hover {
            text-decoration: underline;
        }
    </style>
<body class="bg-gray-100 text-gray-900">
<div class="p-6">
    <h1 class="dashboard-title">Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- √úbersicht -->
        <div class="card">
            <h2 class="text-lg font-semibold mb-2">√úbersicht</h2>
            <p>Projektname: n8n-Test</p>
            <p>Projekt-ID: innate-setup-454010-i9</p>

            {% for row in info %}
                {% if row.from_to %}
                    <p>Abrechnung: {{ row.from_to }}</p>
                {% elif row.kosten_chf %}
                    <p>Betrag: {{ row.kosten_chf }} CHF</p>
                {% endif %}
            {% endfor %}
        </div>

        <!-- GDrive -->
        <div class="bg-white rounded-xl shadow p-4">
            <h2 class="text-lg font-semibold mb-2">GDrive vs. Lokal</h2>
            <table class="w-full text-sm text-left">
                <thead>
                <tr>
                    <th class="font-medium">Kategorie</th>
                    <th class="font-medium text-right">GDrive</th>
                    <th class="font-medium text-center"></th>
                    <th class="font-medium text-left">Lokal</th>
                    <th class="font-medium text-left">DB Cache</th>
                </tr>
                </thead>
                <tbody>
                {% for stat in gdrive_stats %}
                    <tr class="border-t">
                        <td>
                            <div class="icon-link-sm">
                                <span class="icon-sm">{{ stat.icon }}</span>
                                <a href="/gallery/?page=1&amp;count=6&amp;folder={{ stat.key }}&amp;textflag=1"
                                   class="text-blue">
                                    {{ stat.label }}
                                </a>
                            </div>
                        </td>
                        <td class="text-right">{{ stat.gdrive_count }}</td>
                        <td class="text-center">
                            <div class="flex justify-center gap-4">
                                <form action="/gallery/dashboard/test">
                                    <input type="hidden" name="folder" value="{{ stat.key }}">
                                    <input type="hidden" name="direction" value="gdrive_from_lokal">
                                    <button type="submit" class="text-xl">&rarr;</button>
                                </form>
                                <form action="/gallery/dashboard/test">
                                    <input type="hidden" name="folder" value="{{ stat.key }}">
                                    <input type="hidden" name="direction" value="gdrive_from_lokal">
                                    <button type="submit" class="text-xl">&larr;</button>
                                </form>
                            </div>
                        </td>
                        <td class="text-left pl-2">{{ stat.local_count }}</td>
                        <td class="text-left pl-2">
                            <form action="/gallery/dashboard/test">
                                <input type="hidden" name="folder" value="{{ stat.key }}">
                                <input type="hidden" name="direction" value="reloadcache">
                                <button type="submit">üîÅ{{ stat.db_count }}</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Tools -->
        <div class="bg-white rounded-xl shadow p-4">
            <h2 class="text-lg font-semibold mb-2">Tools</h2>
            <ul class="space-y-2 text-lg">
                {% for link in tool_links %}
                    {% if "dashboard/what" in link.url %}
                        <a href="#"
                           onclick="openWhatModal('{{ link.url }}'); return false;">{{ link.icon }} {{ link.label }}</a>
                        <br>
                    {% else %}
                        <a href="{{ link.url }}">{{ link.icon }} {{ link.label }}</a><br>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Monatsnavigation -->
    <div class="flex justify-between items-center my-4">
        <a href="{{ nav.prev|safe }}" class="text-blue-600 hover:underline">‚Üê Vorheriger Monat</a>
        <span class="font-semibold">Monat: {{ nav.current }}</span>
        <a href="{{ nav.next|safe }}" class="text-blue-600 hover:underline">N√§chster Monat ‚Üí</a>
    </div>

    <!-- Balkenanzeige -->
    <!-- Balkenanzeige -->
    <div class="mt-6 bg-white rounded-xl shadow p-4">
        <h2 class="text-lg font-semibold mb-4">Tagesgenaue Kosten im aktuellen Monat</h2>
        <canvas id="dailyCostsChart" height="100"></canvas>
        <script>
            const ctx = document.getElementById('dailyCostsChart').getContext('2d');
            const dailyChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ labels | tojson }},
                    datasets: {{ cost_datasets | tojson | safe }}
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                label: function (context) {
                                    return context.dataset.label + ': CHF ' +
                                        context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'CHF'
                            }
                        },
                        x: {
                            stacked: false
                        }
                    }
                }
            });
        </script>
    </div>
</div>
<script>
    async function openWhatModal(url) {
        if (document.getElementById("what-modal-backdrop")) return;

        const response = await fetch(url);
        const html = await response.text();

        const tempDiv = document.createElement("div");
        tempDiv.innerHTML = html;
        const modal = tempDiv.firstElementChild;
        document.body.appendChild(modal);

        // Disable scroll behind modal
        document.body.style.overflow = 'hidden';

        // Bind buttons AFTER insert
        const form = modal.querySelector("#what-form");
        const cancelBtn = modal.querySelector("#what-cancel");

        if (!form) {
            console.error("‚ùå Form not found in modal!");
            return;
        }

        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            console.log("‚úÖ Submit-Handler aktiv");

            const formData = new FormData(form);

            try {
                const res = await fetch(form.action, {
                    method: "POST",
                    body: formData
                });

                const result = await res.json();
                console.log("‚úÖ Antwort erhalten", result);

                if (result.message) {
                    showSuccessToast(result.message);
                } else if (result.selected) {
                    showSuccessToast("‚úÖ Ausgew√§hlt: " + result.selected.join(", "));
                } else {
                    showSuccessToast("Aktion abgeschlossen.");
                }

            } catch (err) {
                console.error("‚ùå Fehler bei POST:", err);
                showSuccessToast("Fehler beim Senden.", true);
            }

            closeWhatModal();
        });

        cancelBtn?.addEventListener("click", closeWhatModal);
        document.addEventListener("keydown", function escClose(e) {
            if (e.key === "Escape") {
                closeWhatModal();
                document.removeEventListener("keydown", escClose);
            }
        });
    }

    function closeWhatModal() {
        const modal = document.getElementById("what-modal-backdrop");
        if (modal) modal.remove();
        document.body.style.overflow = '';
    }

    function showSuccessToast(text, isError = false) {
        const msg = document.createElement("div");
        msg.innerText = text;

        msg.style.position = "fixed";
        msg.style.top = "10px";
        msg.style.right = "10px";
        msg.style.padding = "12px 20px";
        msg.style.backgroundColor = isError ? "#dc2626" : "#4caf50";
        msg.style.color = "white";
        msg.style.borderRadius = "8px";
        msg.style.boxShadow = "0 2px 8px rgba(0,0,0,0.3)";
        msg.style.zIndex = 10000;
        msg.style.fontSize = "1rem";
        msg.style.transition = "opacity 0.3s ease";

        document.body.appendChild(msg);

        setTimeout(() => {
            msg.style.opacity = "0";
            setTimeout(() => msg.remove(), 300);
        }, 2500);
    }
</script>
</body>
</html>
