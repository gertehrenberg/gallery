<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Google Drive Cleanup</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            line-height: 1.5;
        }

        h1 {
            margin-bottom: 20px;
        }

        h2 {
            margin-top: 40px;
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }

        th, td {
            padding: 8px 10px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #f8f8f8;
            text-align: left;
        }

        .ok {
            color: #5cb85c;
            font-weight: bold;
            text-align: left;
        }

        .warn {
            color: #d9534f;
            font-weight: bold;
        }

        .count {
            color: #777;
            font-size: 14px;
            margin-left: 5px;
        }

        .dry {
            color: darkorange;
            font-weight: bold;
        }

        img.thumb {
            height: 60px;
            border: 1px solid #ccc;
            border-radius: 4px;
            object-fit: cover;
        }

        .thumb-right {
            text-align: right;
        }

        .thumb-left {
            text-align: left;
        }

        .center {
            text-align: center;
        }

        /* Sticky Bar */
        .sticky-bar {
            position: sticky;
            top: 0;
            background: #ffffffdd;
            backdrop-filter: blur(6px);
            padding: 10px 0;
            margin-bottom: 10px;
            border-bottom: 1px solid #ddd;
            z-index: 100;
        }

        /* Einheitliche Buttons */
        .btn {
            padding: 8px 16px;
            font-size: 15px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.25s ease, transform 0.1s ease;
        }

        /* Hover Effekt */
        .btn:hover {
            transform: translateY(-1px);
        }

        /* Button-Farben */
        .dashboard-btn {
            background: #0275d8;
            color: white;
        }

        .dashboard-btn:hover {
            background: #025aa5;
        }

        .reload-btn {
            background: #f0ad4e;
            color: white;
        }

        .reload-btn:hover {
            background: #ec971f;
        }

        .delete-btn {
            background: #d9534f;
            color: white;
        }

        .delete-btn:hover {
            background: #c9302c;
        }
    </style>
</head>

<body>

<h1>Google Drive â€“ Case-Duplicate Cleanup</h1>

<form action="/gallery/gdrive_cleanup_delete" method="post">

    <!-- STICKY BUTTON BAR -->
    <div class="sticky-bar">
        <div style="display: flex; gap: 8px; align-items: center;">

            <!-- Dashboard Button -->
            <button type="button" class="btn dashboard-btn"
                    onclick="dashboard()">
                ðŸ“Š Dashboard
            </button>

            <!-- Reload Button -->
            <button type="button" class="btn reload-btn"
                    onclick="window.location.href='/gallery/gdrive_cleanup_reload'">
                ðŸ”„ Neu laden
            </button>

            <!-- Delete Button -->
            <button class="btn delete-btn" type="submit">
                ðŸ—‘ AusgewÃ¤hlte lÃ¶schen
            </button>

        </div>
    </div>

    {% for c in categories %}

        <h2>
            {{ c.label }} ({{ c.key }})
            <span class="count">{{ c.num_results }} Duplikate gefunden</span>
        </h2>

        {% if c.num_results == 0 %}
            <p>Keine Duplikate in diesem Ordner.</p>
        {% else %}

            <table>
                <thead>
                <tr>
                    <th class="thumb-right">Bild (gross)</th>
                    <th class="center">LÃ¶schen?</th>
                    <th class="thumb-left">Bild (richtig)</th>
                    <th class="left">Dateiname</th>
                </tr>
                </thead>

                <tbody>
                {% for r in c.results %}
                    <tr>
                        <!-- Uppercase Thumbnail (rechtsbÃ¼ndig) -->
                        <td class="thumb-right">
                            <img class="thumb"
                                 src="https://drive.google.com/thumbnail?id={{ r.delete_id }}&sz=w200"
                                 alt="delete">
                        </td>

                        <!-- Checkbox -->
                        <td class="center">
                            <input type="checkbox" name="delete_ids" value="{{ r.delete_id }}">
                        </td>

                        <!-- Lowercase Thumbnail (linksbÃ¼ndig) -->
                        <td class="thumb-left">
                            <img class="thumb"
                                 src="https://drive.google.com/thumbnail?id={{ r.keep_id }}&sz=w200"
                                 alt="keep">
                        </td>

                        <!-- Lowercase Dateiname -->
                        <td class="ok">{{ r.keep }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>

        {% endif %}

    {% endfor %}

</form>

<script>
    function dashboard() {
        window.location.href = "/gallery/dashboard";
    }
</script>

</body>
</html>
