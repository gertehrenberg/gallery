<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Lokaler Duplikat-Cleanup</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }
        th, td {
            padding: 8px 10px;
            border-bottom: 1px solid #ddd;
        }
        th { background: #f8f8f8; }

        img.thumb {
            height: 60px;
            border: 1px solid #ccc;
            border-radius: 4px;
            object-fit: cover;
        }

        .thumb-right { text-align:right; }
        .thumb-left { text-align:left; }
        .center { text-align:center; }

        .ok   { color:#5cb85c; font-weight:bold; }
        .warn { color:#d9534f; font-weight:bold; }

        /* Buttons */
        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            margin-right: 6px;
            border: none;
            cursor: pointer;
            font-weight: 600;
        }
        .btn-blue   { background:#0275d8; color:white; }
        .btn-orange { background:#f0ad4e; color:white; }
        .btn-red    { background:#d9534f; color:white; }
        .btn-cyan   { background:#5bc0de; color:white; }

        .sticky-bar {
            position: sticky;
            top: 0;
            background: #ffffffdd;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
            margin-bottom: 10px;
            backdrop-filter: blur(4px);
        }

        h2 { margin-top: 40px; }
    </style>
</head>

<body>

<h1 style="display:flex; justify-content:space-between; align-items:center;">
    <span>Lokaler Duplikat-Cleanup</span>
    <span style="font-size:14px; color:#777;">v{{ version }}</span>
</h1>

<form action="/gallery/local_cleanup_delete" method="post">

    <!-- Sticky Buttons -->
    <div class="sticky-bar">
        <button type="button" class="btn btn-blue"
                onclick="window.location.href='/gallery/dashboard'">üìä Dashboard</button>

        <button type="button" class="btn btn-orange"
                onclick="window.location.href='/gallery/local_cleanup_reload'">üîÑ Neu laden</button>

        <button type="button" class="btn btn-cyan"
                onclick="selectFirst50()">‚úîÔ∏è Erste 50 ausw√§hlen</button>

        <button class="btn btn-red" type="submit">üóë Ausgew√§hlte l√∂schen</button>
    </div>



    {% for c in categories %}
        <h2>{{ c.label }} ({{ c.key }})</h2>

        <!-- ========================= -->
        <!--    NORMAL DUPE RESULTS    -->
        <!-- ========================= -->

        {% if c.results|length > 0 %}
        <h3>{{ c.results|length }} Duplikate gefunden</h3>

        <table>
            <thead>
            <tr>
                <th class="thumb-right">L√∂schen (gross)</th>
                <th class="center">‚úî</th>
                <th class="thumb-left">Behalten (richtig)</th>
                <th>delete</th>
                <th>keep</th>
            </tr>
            </thead>

            <tbody>
            {% for r in c.results %}
                <tr>

                    <!-- DELETE img -->
                    <td class="thumb-right">
                        <img class="thumb"
                             src="/static/imagefiles/{{ r.folder }}/{{ r.delete }}">
                    </td>

                    <!-- Checkbox -->
                    <td class="center">
                        <input type="checkbox" name="delete_ids" value="{{ r.delete_id }}">
                    </td>

                    <!-- KEEP img -->
                    <td class="thumb-left">
                        <img class="thumb"
                             src="/static/imagefiles/{{ r.folder }}/{{ r.keep }}">
                    </td>

                    <td class="warn">{{ r.delete }}</td>
                    <td class="ok">{{ r.keep }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}



        <!-- ========================= -->
        <!--    WEIRD CASES LISTE     -->
        <!-- ========================= -->

        {% if c.weird|length > 0 %}
        <h3 style="margin-top:25px; color:#d9534f;">
            {{ c.weird|length }} ungew√∂hnliche Dateien (keine lowercase-Version)
        </h3>

        <table>
            <thead>
            <tr>
                <th>Dateiname</th>
                <th>Sanitized</th>
                <th>Bild</th>
            </tr>
            </thead>

            <tbody>
            {% for w in c.weird %}
                <tr>
                    <td class="warn">{{ w.name }}</td>
                    <td class="ok">{{ w.sanitized }}</td>
                    <td>
                        <img class="thumb"
                             src="/static/imagefiles/{{ w.folder }}/{{ w.name }}">
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}

    {% endfor %}

</form>

<script>
function selectFirst50() {
    const boxes = document.querySelectorAll("input[type='checkbox'][name='delete_ids']");
    let count = 0;
    boxes.forEach(box => {
        if (count < 50) {
            box.checked = true;
            count++;
        }
    });
}
</script>

</body>
</html>
