<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Google Drive Cleanup</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            line-height: 1.5;
            background: #f5f5f5;
        }

        h1 { margin-bottom: 20px; }

        h2 {
            margin-top: 40px;
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }

        th, td {
            padding: 8px 10px;
            border-bottom: 1px solid #ddd;
        }

        th { background: #f8f8f8; text-align: left; }

        .ok {
            color: #5cb85c;
            font-weight: bold;
        }

        .center { text-align: center; }
        .thumb-left { text-align: left; }
        .thumb-right { text-align: right; }

        img.thumb {
            height: 60px;
            border: 1px solid #ccc;
            border-radius: 4px;
            object-fit: cover;
        }

        .sticky-bar {
            position: sticky;
            top: 0;
            background: #ffffffdd;
            backdrop-filter: blur(6px);
            padding: 10px 0;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            z-index: 100;
        }

        .btn {
            padding: 8px 16px;
            font-size: 15px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.25s ease, transform 0.1s ease;
        }

        .btn:hover { transform: translateY(-1px); }

        .dashboard-btn { background: #0275d8; color: white; }
        .dashboard-btn:hover { background: #025aa5; }

        .reload-btn { background: #f0ad4e; color: white; }
        .reload-btn:hover { background: #ec971f; }

        .delete-btn { background: #d9534f; color: white; }
        .delete-btn:hover { background: #c9302c; }

        .select-btn { background: #5bc0de; color: white; }
        .select-btn:hover { background: #31b0d5; }

        /* PROGRESS BOX */
        #progressBox {
            display: none;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
        }

        .progress-bar-bg {
            width: 100%;
            height: 22px;
            background: #ddd;
            border-radius: 10px;
            overflow: hidden;
            margin: 6px 0;
        }

        .progress-bar {
            height: 22px;
            width: 0%;
            background: #0275d8;
            transition: width 0.3s ease;
        }

        .detail-bar {
            background: #5cb85c;
        }
    </style>
</head>

<body>

<h1>GDrive Clean (gross/klein)</h1>

<form action="/gallery/cleanup_gdrive_delete" method="post">

    <!-- STICKY BUTTON BAR -->
    <div class="sticky-bar">
        <div style="display: flex; gap: 8px; align-items: center;">

            <button type="button" class="btn dashboard-btn"
                    onclick="window.location.href='/gallery/dashboard'">
                üìä Dashboard
            </button>

            <button id="reloadBtn" type="button" class="btn reload-btn"
                    onclick="startReload()">
                üîÑ Neu laden
            </button>

            <button type="button" class="btn select-btn"
                    onclick="selectFirst50()">
                ‚úîÔ∏è Erste 50 ausw√§hlen
            </button>

            <button id="deleteBtn" class="btn delete-btn" type="submit">
                üóë Ausgew√§hlte l√∂schen
            </button>

        </div>
    </div>

    <!-- PROGRESS UI -->
    <div id="progressBox">
        <div id="progressText" style="font-weight: bold;">Starte‚Ä¶</div>

        <div class="progress-bar-bg">
            <div id="mainBar" class="progress-bar"></div>
        </div>

        <div id="detailText" style="font-size: 14px; margin-top: 10px;">‚Äì</div>

        <div class="progress-bar-bg">
            <div id="detailBar" class="progress-bar detail-bar"></div>
        </div>
    </div>

    {% if not categories %}
        <p>Keine Ergebnisse ‚Äì bitte ‚ÄûNeu laden‚Äú dr√ºcken.</p>
    {% endif %}

    {% for c in (categories or []) %}

        <h2>
            {{ c.label }} ({{ c.key }})
            <span class="count">{{ c.num_results }} Duplikate gefunden</span>
        </h2>

        <table>
            <thead>
            <tr>
                <th class="thumb-right">Bild (nicht klein)</th>
                <th class="center">L√∂schen?</th>
                <th class="thumb-left">Bild (richtig)</th>
                <th>Dateiname</th>
            </tr>
            </thead>

            <tbody>
            {% for r in c.results %}
                <tr>
                    <td class="thumb-right">
                        <img class="thumb"
                             src="https://drive.google.com/thumbnail?id={{ r.delete_id }}&sz=w200">
                    </td>

                    <td class="center">
                        <input type="checkbox" name="delete_ids" value="{{ r.delete_id }}">
                    </td>

                    <td class="thumb-left">
                        <img class="thumb"
                             src="https://drive.google.com/thumbnail?id={{ r.keep_id }}&sz=w200">
                    </td>

                    <td class="ok">{{ r.keep }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endfor %}

</form>

<script>
let progressTimer = null;

function updateProgress() {
    fetch("/gallery/cleanup_gdrive_progress")
        .then(r => r.json())
        .then(p => {
            document.getElementById("progressText").innerText = p.status;
            document.getElementById("mainBar").style.width = p.progress + "%";

            document.getElementById("detailText").innerText = p.details.status || "-";
            document.getElementById("detailBar").style.width =
                (p.details.progress * 5) + "%";

            if (p.progress >= 100) {
                clearInterval(progressTimer);
                progressTimer = null;

                document.getElementById("progressBox").style.display = "none";

                setTimeout(() => {
                    window.location.href = "/gallery/cleanup_gdrive";
                }, 400);
            }
        });
}

function startReload() {
    document.getElementById("progressBox").style.display = "block";

    document.getElementById("reloadBtn").disabled = true;
    document.getElementById("deleteBtn").disabled = true;

    fetch("/gallery/cleanup_gdrive_start", { method: "POST" })
        .then(() => {
            if (!progressTimer)
                progressTimer = setInterval(updateProgress, 350);
        });
}

function selectFirst50() {
    const boxes = document.querySelectorAll("input[type='checkbox'][name='delete_ids']");
    let count = 0;

    boxes.forEach(box => {
        if (count < 50) {
            box.checked = true;
            count++;
        }
    });
}
</script>

</body>
</html>
