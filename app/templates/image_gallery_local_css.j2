.menu-section{display:flex;flex-direction:column;gap:8px;}
.menu-header{font-size:.75rem;text-transform:uppercase;letter-spacing:.08em;color:#9ca3af;margin-bottom:2px;padding:0 2px;}
.menu-divider{border-top:1px solid #1f2937;margin:6px 0;}
.input-group{display:flex;gap:6px;align-items:center;}
.menu-input{padding:7px 10px;border-radius:999px;border:1px solid #1f2937;background:#020617;color:#e5e7eb;font-size:.8rem;width:100%;}
.menu-input::placeholder{color:#6b7280;}
.menu-input:focus{outline:none;border-color:#38bdf8;box-shadow:0 0 0 1px rgba(56,189,248,0.6);}
.menu-input-small{width:80px;}
.menu-icon-row{display:flex;align-items:center;gap:6px;flex-wrap:wrap;}
.menu-icons-row{flex-direction:row;align-items:center;flex-wrap:wrap;gap:6px;margin-top:2px;}
.menu-icon{font-size:1.1rem;cursor:pointer;padding:3px;border-radius:999px;transition:transform .1s ease,filter .1s ease,background .1s ease;}
.menu-icon:hover{transform:translateY(-1px) scale(1.05);background:#030712;filter:drop-shadow(0 0 6px rgba(148,163,184,0.8));}
.menu-goto-row{display:flex;align-items:center;gap:6px;}
.menu-actions{margin-top:2px;}
.menu-actions .menu-row{display:flex;gap:6px;}
.menu-actions .menu-row+.menu-row{margin-top:4px;}
.btn,.nav-btn,.menu-btn,.hamburger-btn{padding:6px 11px;font-size:.8rem;border-radius:999px;border:1px solid #1f2937;background:#020617;color:#e5e7eb;cursor:pointer;display:inline-flex;align-items:center;justify-content:center;gap:6px;line-height:1.2;white-space:nowrap;}
.btn:hover,.nav-btn:hover,.menu-btn:hover,.hamburger-btn:hover{background:#111827;}
.btn-primary,.nav-btn-primary,.menu-btn-primary{background:#0ea5e9;border-color:#0ea5e9;color:#0b1120;font-weight:600;}
.btn-primary:hover,.nav-btn-primary:hover,.menu-btn-primary:hover{background:#38bdf8;}
.btn-ghost,.nav-btn-ghost{background:#020617;}
.btn-icon,.nav-btn-icon{width:30px;height:30px;padding:0;}
.menu-btn-icon-small{width:34px;height:30px;padding:0;text-align:center;}
.menu-btn-wide{flex:1;justify-content:flex-start;}
.menu-btn-active{background:#111827;border-color:#38bdf8;}
.hamburger-btn{box-shadow:0 10px 25px rgba(0,0,0,0.7);font-size:.9rem;}
.sticky-nav{display:flex;align-items:center;}
.nav-section{display:flex;align-items:center;gap:8px;}
.nav-btn,.nav-link,.nav-folder,.nav-btn-primary,.nav-btn-ghost,.nav-btn-icon{height:32px;display:inline-flex;align-items:center;justify-content:center;padding-top:0;padding-bottom:0;line-height:1;}
.nav-btn-icon{width:32px;padding:0;}
.nav-btn-primary{padding-left:14px;padding-right:14px;}
