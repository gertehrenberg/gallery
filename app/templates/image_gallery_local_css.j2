.nsfw_quality-bar:hover::after{opacity:1;}
.nsfw_quality-bar:nth-child(3){background:linear-gradient(to right,#ef4444,#eab308,#22c55e);}
.hamburger-wrapper{position:fixed;top:56px;left:20px;z-index:1000;}
