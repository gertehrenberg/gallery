<style>
body{font-family:system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",sans-serif;margin:0;background:#020617;color:#e5e7eb;}
.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:10px;padding:10px;width:100%;row-gap:2px;}
.eintrag{background:#020617;border:1px solid #1f2937;border-radius:12px;padding:10px;box-shadow:0 16px 35px rgba(0,0,0,0.65);display:flex;flex-direction:column;gap:10px;width:95%;}
.bild-wrapper{display:flex;justify-content:center;align-items:flex-start;}
.bild{width:100%;max-width:250px;height:auto;border-radius:8px;cursor:pointer;box-shadow:0 8px 20px rgba(0,0,0,0.6);}
.checkbox-container{display:flex;flex-direction:column;gap:0;}
.checkbox-container label{display:block;margin-bottom:0;font-size:.7em;padding:0;color:#e5e7eb;}
.bildname-box{display:flex;justify-content:center;border:1px solid #1f2937;border-radius:5px;padding:5px;margin-top:10px;background:#020617;font-size:.7em;}
.bildname{text-align:center;margin-top:8px;font-size:.7em;color:#9ca3af;}
.text{margin-top:10px;font-size:.9em;color:#e5e7eb;white-space:pre-wrap;}
.sticky-nav{position:sticky;top:0;background:rgba(2,6,23,0.9);padding:8px 20px;border-bottom:1px solid #1f2937;text-align:center;font-size:1.1em;display:flex;justify-content:space-between;align-items:center;gap:12px;z-index:1000;max-width:100%;flex-wrap:nowrap;backdrop-filter:blur(10px);}
.sticky-nav a,.sticky-nav span{text-decoration:none;color:#e5e7eb;font-weight:600;}
.sticky-nav a:hover{color:#38bdf8;}
.nav-section{display:flex;align-items:center;gap:8px;}
.nav-center{justify-content:center;flex:1;}
.nav-right{gap:10px;}
.nav-count-buttons{display:flex;gap:4px;}
.nav-right-links{display:flex;gap:6px;}
.nav-folder{font-weight:600;font-size:.9rem;color:#e5e7eb;}
.nav-link{font-size:.8rem;padding:4px 10px;border-radius:999px;border:1px solid transparent;color:#e5e7eb;text-decoration:none;background:transparent;}
.nav-link:hover{border-color:#1f2937;background:#020617;text-decoration:none;}
.nav-link-disabled{opacity:.4;cursor:default;}
.modal{position:fixed;z-index:9999;top:0;left:0;width:100%;height:100%;background:rgba(15,23,42,0.95);display:none;justify-content:center;align-items:center;}
.modal img{max-width:90vw;max-height:90vh;object-fit:contain;display:block;margin:auto;box-shadow:0 20px 45px rgba(0,0,0,0.9);border-radius:12px;background:#020617;}
.close{position:absolute;top:20px;right:40px;z-index:10001;font-size:28px;color:#e5e7eb;background:rgba(15,23,42,0.8);border:1px solid #1f2937;padding:6px 12px;border-radius:999px;cursor:pointer;pointer-events:auto;}
#spinner{position:absolute;z-index:9999;border:6px solid #020617;border-top:6px solid #38bdf8;border-radius:50%;width:50px;height:50px;animation:spin 1s linear infinite;top:50%;left:50%;transform:translate(-50%,-50%);display:none;}
#zoomWrapper{cursor:grab;display:flex;justify-content:center;align-items:center;}
@keyframes spin{0%{transform:translate(-50%,-50%) rotate(0deg);}100%{transform:translate(-50%,-50%) rotate(360deg);}}
.thumbnail-mini{width:50px;height:20px;object-fit:cover;margin-right:4px;border:1px solid:#1f2937;border-radius:4px;background:#020617;}
.thumbnails-row{display:flex;flex-direction:row;flex-wrap:nowrap;gap:4px;margin-top:6px;overflow-x:auto;}
.config-section{display:none;margin-top:1rem;border-top:1px solid #1f2937;padding-top:.5rem;}
.config-section.show{display:block;}
button.section-toggle{background:none;border:none;color:#38bdf8;text-align:left;padding:0;margin-top:.5rem;cursor:pointer;font-size:.85rem;font-weight:500;}
button.section-toggle:hover{text-decoration:underline;}
.nsfw-bars{margin-top:.5rem;margin-bottom:1rem;}
.nsfw_quality-bar{margin-top:3px;position:relative;height:10px;background:linear-gradient(to right,#22c55e,#eab308,#ef4444);border-radius:5px;overflow:hidden;cursor:pointer;}
.nsfw_quality-bar .nsfw_bar{width:100%;height:100%;position:relative;}
.nsfw_quality-bar .nsfw_marker{position:absolute;top:-1px;transform:translateX(-50%);background:transparent;color:#e5e7eb;padding:0;font-size:11px;font-weight:normal;line-height:1;z-index:2;text-shadow:0 0 4px rgba(0,0,0,0.7);}
