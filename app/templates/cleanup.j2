<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">

    <title>
        {% if mode == "gdrive" %}
            Google Drive Duplikat-Cleanup
        {% else %}
            Lokaler Duplikat-Cleanup
        {% endif %}
    </title>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }

        th, td {
            padding: 8px 10px;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }

        th {
            background: #f8f8f8;
            text-align: left;
        }

        img.thumb {
            height: 60px;
            border: 1px solid #ccc;
            border-radius: 4px;
            object-fit: cover;
        }

        .warn {
            color: #d9534f;
            font-weight: bold;
        }

        .warn1 {
            color: #5bc0de;
            font-weight: bold;
        }

        .ok {
            color: #5cb85c;
            font-weight: bold;
        }

        .center {
            text-align: center;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            margin-right: 6px;
            border: none;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-blue {
            background: #0275d8;
            color: white;
        }

        .btn-orange {
            background: #f0ad4e;
            color: white;
        }

        .btn-red {
            background: #d9534f;
            color: white;
        }

        .btn-cyan {
            background: #5bc0de;
            color: white;
        }

        .sticky-bar {
            position: sticky;
            top: 0;
            background: #ffffffee;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
            margin-bottom: 10px;
            backdrop-filter: blur(4px);
        }

        #progressBox {
            display: none;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        }

        .progress-bar-bg {
            width: 100%;
            height: 22px;
            background: #ddd;
            border-radius: 10px;
            overflow: hidden;
            margin: 6px 0;
        }

        .progress-bar {
            height: 22px;
            width: 0%;
            background: #0275d8;
            transition: width .3s ease;
        }

        .detail-bar {
            background: #5cb85c;
        }
    </style>
</head>

<body>

<h1 style="display:flex; justify-content:space-between; align-items:center;">
    <span>
        {% if mode == "gdrive" %}
            Google Drive Clean (gross/klein)
        {% else %}
            Local Clean (gross/klein)
        {% endif %}
    </span>
    <span style="font-size:14px; color:#777;">v{{ version }}</span>
</h1>

<form action="/gallery/cleanup_{{ mode }}_delete" method="post">

    <div class="sticky-bar">
        <button type="button" class="btn btn-blue"
                onclick="window.location.href='/gallery/dashboard'">üìä Dashboard
        </button>

        <button id="reloadBtn" type="button" class="btn btn-orange"
                onclick="startReload()">üîÑ Neu laden
        </button>

        <button type="button" class="btn btn-cyan"
                onclick="selectFirst50lower()">‚úîÔ∏è 50 ‚úèÔ∏è
        </button>

        <button type="button" class="btn btn-cyan"
                onclick="selectFirst50()">‚úîÔ∏è 50 üóë
        </button>

        <button id="deleteBtn" class="btn btn-red" type="submit">üóë/‚úèÔ∏è</button>
    </div>

    <!-- PROGRESS -->
    <div id="progressBox">
        <div id="progressText" style="font-weight:bold;">Starte‚Ä¶</div>

        <div class="progress-bar-bg">
            <div id="mainBar" class="progress-bar"></div>
        </div>

        <div id="detailText" style="font-size:14px; margin-top:10px;">Seite</div>

        <div class="progress-bar-bg">
            <div id="detailBar" class="progress-bar detail-bar"></div>
        </div>
    </div>

    <!-- TABLE -->
    <table>
        <thead>
        <tr>
            <th>Kategorie</th>
            <th class="center">L√∂schen-Bild</th>
            <th class="center">üóëÔ∏è</th>
            <th class="center">‚úèÔ∏è</th>
            <th class="center">Behalten-Bild</th>
            <th>NAME (alt)</th>
            <th>NAME (neu)</th>
        </tr>
        </thead>

        <tbody>

        {% for c in (categories or []) %}
            {% for r in c.results %}
                <tr>
                    <td><b>{{ c.label }}</b></td>

                    <!-- DELETE IMAGE -->
                    <td class="center">
                        {% if mode == "gdrive" %}
                            <img class="thumb" src="https://drive.google.com/thumbnail?id={{ r.delete_id }}&sz=w200">
                        {% else %}
                            <img class="thumb" src="/static/imagefiles/{{ r.folder }}/{{ r.delete }}">
                        {% endif %}
                    </td>

                    <!-- DELETE CHECKBOX -->
                    <td class="center">
                        <input type="checkbox" name="delete_ids" value="{{ r.delete_id }}">
                    </td>

                    <!-- LOWERCASE CHECKBOX -->
                    <td class="center">
                        {% if r.type == "weird" %}
                            <input type="checkbox" name="lower_ids" value="{{ r.delete_id }}">
                        {% endif %}
                    </td>

                    <!-- KEEP IMAGE -->
                    <td class="center">
                        {% if mode == "gdrive" %}
                            {% if r.keep_id %}
                                <img class="thumb" src="https://drive.google.com/thumbnail?id={{ r.keep_id }}&sz=w200">
                            {% else %}
                                <span style="color:#777;">(neu)</span>
                            {% endif %}
                        {% else %}
                            <img class="thumb" src="/static/imagefiles/{{ r.folder }}/{{ r.keep }}">
                        {% endif %}
                    </td>

                    <!-- OLD NAME -->
                    <td class="{% if r.type=='weird' %}warn1{% else %}warn{% endif %}">
                        {{ r.delete }}
                    </td>

                    <!-- NEW NAME -->
                    <td class="ok">{{ r.keep }}</td>
                </tr>
            {% endfor %}
        {% endfor %}

        </tbody>
    </table>

</form>

<script>
    let progressTimer = null;

    function updateProgress() {
        fetch("/gallery/cleanup_{{ mode }}_progress")
            .then(r => r.json())
            .then(p => {
                document.getElementById("progressText").innerText = p.status;
                document.getElementById("mainBar").style.width = p.progress + "%";
                document.getElementById("detailText").innerText = p.details.status || "";
                document.getElementById("detailBar").style.width = p.details.progress + "%";

                if (p.progress >= 100) {
                    clearInterval(progressTimer);
                    progressTimer = null;

                    document.getElementById("progressBox").style.display = "none";
                    setTimeout(() => location.reload(), 400);
                }
            });
    }

    function startReload() {
        document.getElementById("progressBox").style.display = "block";
        document.getElementById("reloadBtn").disabled = true;
        document.getElementById("deleteBtn").disabled = true;

        fetch("/gallery/cleanup_{{ mode }}_start", {method: "POST"})
            .then(() => {
                if (!progressTimer)
                    progressTimer = setInterval(updateProgress, 350);
            });
    }

    function selectFirst50() {
        const boxes = document.querySelectorAll("input[name='delete_ids']");
        let count = 0;
        boxes.forEach(box => {
            if (count < 50) {
                box.checked = true;
                count++;
            }
        });
    }

    function selectFirst50lower() {
        const boxes = document.querySelectorAll("input[name='lower_ids']");
        let count = 0;
        boxes.forEach(box => {
            if (count < 50) {
                box.checked = true;
                count++;
            }
        });
    }
</script>

</body>
</html>
